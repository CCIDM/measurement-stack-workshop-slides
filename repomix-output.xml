/*----------------------------------------
  1. DEFAULTS
  (Quarto requires at least one boundary)
----------------------------------------*/
/*-- scss:defaults --*/

// Cal Poly Pomona Branding
$cpp-green: #005030;
$cpp-gold:  #FFB81C;

// Secondary Colors
$avocado:   #A4D65E;
$citrus:    #FF7500;
$white:     #FFFFFF;
$teal:      #00838A;
$bay-brown: #CFBAB0;
$black:     #121212;
$rose:      #b52b4c;
$eggshell:  #E2E8E0;


// Typography
$font-primary: Arial, sans-serif;
$font-secondary: Georgia, serif;
$font-body: Arial, sans-serif;



/*----------------------------------------
  2. RULES
----------------------------------------*/
/*-- scss:rules --*/

/* Reveal-specific styles */
.reveal {
  /* Base font and color for reveal slides */
  font-family: $font-body;
  color: $black;

  
  /* Headings */
  h1, h2, h3, h4, h5, h6 {
    font-family: $font-primary;
    font-weight: bold;
  }

  h1 {
    font-size: 2.0em;
    color: $cpp-green !important;
  }

  h2 {
    font-size: 1.75em;
    color: $cpp-gold !important;
  }

  h3 {
    font-size: 1.5em;
    color: $teal !important;
  }
  
  h4 {
    font-size: 1.25em;
    color: $rose !important;
  }

  p {
    font-size: 0.9em;
    line-height: 1.1;
    color: $black !important;
  }



  /* Links */
  a {
    color: $citrus !important;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  /* Slide background */
  .slide-background {
    background-color: $eggshell !important;
  }

  /* Controls */
  .controls {
    color: $cpp-green !important;
  }

  /* Progress bar */
  .progress {
    background-color: $cpp-green !important;
    height: 5px;

    span {
      background-color: $cpp-gold !important;
    }
  }

  /* Code blocks specifically in .reveal slides */
  pre code {
    background-color: $cpp-green;
    color: $white;
    font-size: 1em;
    padding: 1em;
    border-radius: 5px;
    border: 2px solid $avocado;
  }

/* Bulleted and numbered lists in slides */
  .slides section { 
  
    /* First-level unordered list */
    ul {
    list-style-type: disc;
    font-size: 2.0rem;
    margin-left: 1.5em;
    color: $black;  // Color for first-level bullets and text

    // Second-level bullets
    ul {
      list-style-type: square;
      font-size: 1.75rem;
      margin-left: 1.6em;
      color: $black;  // Color for second-level bullets and text

      // Third-level bullets
      ul {
        list-style-type: circle;
        font-size: 1.5rem;
        margin-left: 1.7em;
        color: $black;  // Color for third-level bullets and text
      }
    }
  }
  
  /* First-level ordered list */
  ol {
    list-style-type: decimal;
    font-size: 2.0rem;
    margin-left: 1.5em;
    color: $black;  // Color for first-level numbers and text

    /* Second-level ordered list */
    ol {
      list-style-type: lower-alpha;  // a, b, c...
      font-size: 1.75rem;
      margin-left: 1.6em;
      color: $black;  // Color for second-level numbers and text

      /* Third-level ordered list */
      ol {
        list-style-type: lower-roman;  // i, ii, iii...
        font-size: 1.5rem;
        margin-left: 1.7em;
        color: $black;  // Color for third-level numbers and text
      }
    }
  }

  /* Mixed lists (ul inside ol and vice versa) */
  ol ul, ul ol {
    font-size: 2rem;  
    margin-left: 1.6em;  
    color: $black;  

    /* Second-level mixed lists */
    ul, ol {
      font-size: 1.75rem;
      margin-left: 1.7em;
      color: $black;
    }
  }
}

  /* Highlight class */
  .highlight {
    background-color: $citrus;
    color: $white;
    padding: 0.2em 0.4em;
    border-radius: 0.2em;
  }

  /* Logo class */
  .slide-logo {
    bottom: 10px !important;
    right: 10px !important;
    width: 150px !important;
    height: auto !important;
    max-height: none !important;
